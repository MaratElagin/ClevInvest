@page
@model ClevInvest.Pages.LoginRegister.Register


<div class="row justify-content-center">
    <div class="col-6 pageText">
        <form method="post">
            <div class="text-justify">
                <div>
                    <label asp-for="NewUser.UserName" class="ml-2 mb-0">Имя пользователя</label>
                    <input asp-for="NewUser.UserName" name="NewUser.UserName" type="text" class="form-control inputStyle" autocomplete="off">
                    <span asp-validation-for="NewUser.UserName" class="text-danger ml-2"></span>
                </div>
                <div>
                    <label asp-for="NewUser.Login" class="ml-2 mb-0 mt-2">Логин</label>
                    <input asp-for="NewUser.Login" name="NewUser.Login" type="text" class="form-control inputStyle" autocomplete="off">
                    <span asp-validation-for="NewUser.Login" class="text-danger ml-2"></span>
                </div>
                <div>
                    <label asp-for="NewUser.Password1" class="ml-2 mb-0 mt-2">Пароль</label>
                    <input asp-for="NewUser.Password1" name="NewUser.Password1" type="password" class="password form-control inputStyle">
                    <span asp-validation-for="NewUser.Password1" class="text-danger ml-2"></span>
                </div>
                <div>
                    <label asp-for="NewUser.Password2" class="password ml-2 mb-0 mt-2">Подтверждение пароля</label>
                    <input asp-for="NewUser.Password2" name="NewUser.Password2" type="password" class="form-control inputStyle">
                    <span asp-validation-for="NewUser.Password2" class="text-danger ml-2"></span>
                </div>
            </div>
            <div class="footer justify-content-center flex-wrap">
                <input type="submit" class="btn btn-primary w-100 btnRoundBorders mt-2" id="signUp" value="Зарегистрироваться">
                <a class="mt-2 text-center" asp-page="LoginRegister/Login">Уже зарегестрированы?</a>
            </div>
        </form>
    </div>
</div>